<merge xmlns:android="http://schemas.android.com/apk/res/android">

    <EditText
        android:id="@+id/git_newrepo_name"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:hint="@string/github_repository_settings_repository_name"
        android:inputType="text"
        android:singleLine="true" />

    <Switch
        android:id="@+id/git_newrepo_privacy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_below="@+id/git_newrepo_name"
        android:text="@string/github_repository_private" />


</merge>